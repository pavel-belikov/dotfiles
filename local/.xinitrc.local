setxkbmap -layout us,ru -option grp:win_space_toggle,grp_led:scroll,compose:ralt,caps:escape
xkbcomp $DISPLAY - | egrep -v "group . = AltGr;" | xkbcomp - $DISPLAY
xmodmap -e "pointer = 3 2 1 4 5 6 7 8 9 10"
xset m 1/30 1

xrandr --output DVI-D-0 --auto --pos 0x0 --primary
xrandr --output VGA-0 --right-of DVI-D-0
